<% include _layouts/header %>

<h1><%= title %></h1>

<form method="POST" action="/users/register">
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" class="fomr-control" placeholder="Name">
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" name="email" class="fomr-control" placeholder="Email">
    </div>

    <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" class="fomr-control" placeholder="Username">
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" class="fomr-control" placeholder="Password">
    </div>

    <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" name="password2" class="fomr-control" placeholder="Confirm Password">
    </div>

    <button type="submit"  class="btn btn-default">Register</button>
</form>

<% include _layouts/footer %>